.container
  .board_title
    %p All Boards
  - @boards.each do |board|
    = link_to board_path(board) do
      .card
        .card_content
          .card_title
            = board.title
          - if user_signed_in?
            .card_title_actions
              .dropdown
                = image_tag 'actions.svg', class: 'dropbtn'
                .dropdown-content.mini
                  = link_to 'Edit'
                  = link_to 'Delete'
          .card_detail
            = board.content
          .card_avatar
            = image_tag 'content-avatar.png'
            %div
